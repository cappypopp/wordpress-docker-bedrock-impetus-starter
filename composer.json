{
    "name": "cappypopp/wordpress-bedrock-impetus-starter",
    "type": "project",
    "license": "MIT",
    "description": "Full WordPress Bedrock Starter with Sage (impetus) theme",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/roots/bedrock"
        }
    ],
    "require": {
        "php": "^8.0",
        "composer/installers": "^2.2",
        "vlucas/phpdotenv": "^5.4",
        "roots/bedrock": "^1.0"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true,
            "composer/installers": true
        }
    },
    "scripts": {
        "lint": "find web/app -name '*.php' -exec php -l {} \\;",
        "test": "echo 'No tests configured yet.'"
    }
}